	<div class ="col-sm-12 text-center">
		<form action ="/burgers" method=POST>
		<input type="text" id="name" name="burger_name" placeholder="Tasty Burger">		<button type="submit" class="btn btn-success addBurger">Add your burger!</button>
		</form>
